<% include partials/header.ejs %>
        
        <div class="container">
            <div class="jumbotron">
                <h1>Welcome and Join Us!</h1>
                <h3>Make the World Better with Your Donation!</h3>
                <p>Do you know that?</p>
                <p><%= num_users %> users have made <%= num_donations %> donations with total amount <%= donation_amount %>$ when you browse this website.</p>
                <p>Take your action today!</p>
            </div>
            
            <div class="jumbotron" align="center">
                <h3>Join Us Here</h3>
                <form action = "/" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="firstname" placeholder="First Name" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name="lastname" placeholder="Last Name" required>
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="email" name="email" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <button class="btn btn-lg btn-success">Submit</button>
                    </div>
                </form>
            </div>
        </div>
        
<% include partials/footer.ejs %>